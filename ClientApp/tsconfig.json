{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": false, // Disable source map generation
    "outDir": "./dist",
    "paths": {
      "@/*": [ "./src/*" ],
      "@@/*": [ "./src/.umi/*" ],
      "@@test/*": [ "./src/.umi-test/*" ]
    }
  },
  "include": ["./**/*.d.ts", "./**/*.ts", "./**/*.tsx"]
}
